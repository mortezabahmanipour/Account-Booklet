<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="CustomDialog" parent="android:style/Theme.Dialog">
    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@null</item>
        <item name="android:minHeight">0dip</item>
        <item name="android:minWidth">0dip</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <!--    <style name="PopupAnimation" parent="android:Animation" mce_bogus="1">-->
    <!--        <item name="android:windowEnterAnimation">@anim/popup_in</item>-->
    <!--        <item name="android:windowExitAnimation">@anim/popup_out</item>-->
    <!--    </style>-->

    <style name="ToolbarButton">
        <item name="android:layout_width">@dimen/toolbar_button</item>
        <item name="android:layout_height">@dimen/toolbar_button</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">14dp</item>
        <item name="android:clickable">true</item>
        <item name="siv_tint_color">@color/colorText2</item>
        <item name="t_selector_color">@color/colorDefaultSelector</item>
        <item name="t_style">oval</item>
    </style>

    <style name="TopShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">4dp</item>
        <item name="shv_start_color">@color/colorShadow</item>
        <item name="shv_end_color">@android:color/transparent</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textSize">@dimen/toolbar_title</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:ellipsize">end</item>
        <item name="tv_face_style">bold</item>
    </style>

    <style name="Base.YcCardView" parent="android:Widget">
        <item name="ycCardCornerRadius">2dp</item>
        <item name="ycCardElevation">2dp</item>
        <item name="ycCardMaxElevation">2dp</item>
        <item name="ycCardUseCompatPadding">false</item>
        <item name="ycCardPreventCornerOverlap">true</item>
    </style>

    <style name="YcCardView" parent="Base.YcCardView">
    </style>

    <style name="YcCardView.Dark">
        <item name="ycCardBackgroundColor">#15000000</item>
    </style>

    <style name="YcCardView.Light">
        <item name="ycCardBackgroundColor">#FFFFFFFF</item>
    </style>

</resources>
