<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contentMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:splitMotionEvents="false"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bannerLayout">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:elevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <ir.accountbooklet.android.Customs.TextView
                    android:id="@+id/tvTitle"
                    android:layout_height="145dp"
                    android:gravity="center_horizontal"
                    style="@style/TextViewTitle"
                    app:t_background_color="#15000000"
                    app:t_style="rect"
                    app:t_radii="80dp"
                    app:t_disable_shape="top"
                    android:layout_centerVertical="false"
                    android:paddingTop="12dp"/>

                <ir.accountbooklet.android.Customs.SelectorImageView
                    android:id="@+id/ivSettings"
                    style="@style/ToolbarButton"
                    android:src="@drawable/ic_settings"
                    android:layout_centerVertical="false"
                    android:layout_marginLeft="20dp"/>

                <ir.accountbooklet.android.Customs.SelectorImageView
                    android:id="@+id/ivMore"
                    style="@style/ToolbarButton"
                    android:src="@drawable/ic_more_vert"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="false"
                    android:layout_marginRight="20dp"/>

                <ir.accountbooklet.android.Customs.CardView.YcCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ycCardElevation="4dp"
                    app:ycCardCornerRadius="7dp"
                    app:ycCardBackgroundColor="#FFFFFFFF"
                    app:ycStartShadowColor="#15000000"
                    app:ycEndShadowColor="#00000000"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="51dp"
                    android:layout_marginBottom="-1dp">

                    <ir.accountbooklet.android.Customs.TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textSize="12sp"
                        android:textColor="@color/colorText3"
                        app:tv_face_style="bold"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#10000000"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="45dp"/>

                    <ir.accountbooklet.android.Customs.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/colorText2"
                        android:text="@string/all_amount_creditor"
                        app:tv_face_style="normal"
                        android:layout_gravity="right"
                        android:layout_marginTop="45dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"/>
z
                    <ir.accountbooklet.android.Customs.TextView
                        android:id="@+id/tvCreditor"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:singleLine="true"
                        android:gravity="center|left"
                        android:textSize="10sp"
                        android:textColor="@color/colorText4"
                        app:tv_face_style="normal"
                        android:layout_marginTop="45dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="50dp"/>

                    <ir.accountbooklet.android.Customs.TextView
                        android:id="@+id/tvCreditorCount"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:minWidth="25dp"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:singleLine="true"
                        android:textColor="@color/colorWhite"
                        app:t_background_color="@color/colorDefault2"
                        app:t_style="rect"
                        app:t_radii="15dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="60dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#10000000"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="90dp"/>

                    <ir.accountbooklet.android.Customs.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/colorText2"
                        android:text="@string/all_amount_debtor"
                        app:tv_face_style="normal"
                        android:layout_gravity="right"
                        android:layout_marginTop="90dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"/>

                    <ir.accountbooklet.android.Customs.TextView
                        android:id="@+id/tvDebtor"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:singleLine="true"
                        android:gravity="center|left"
                        android:textSize="10sp"
                        android:textColor="@color/colorText4"
                        app:tv_face_style="normal"
                        android:layout_marginTop="90dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="50dp"/>

                    <ir.accountbooklet.android.Customs.TextView
                        android:id="@+id/tvDebtorCount"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:minWidth="25dp"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:singleLine="true"
                        android:textColor="@color/colorWhite"
                        app:t_background_color="@color/colorDefault2"
                        app:t_style="rect"
                        app:t_radii="15dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="100dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#10000000"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="135dp"/>

                    <ir.accountbooklet.android.Customs.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:textColor="@color/colorText2"
                        android:text="@string/all_amount_clearing"
                        app:tv_face_style="normal"
                        android:layout_gravity="right"
                        android:layout_marginTop="135dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"/>

                    <ir.accountbooklet.android.Customs.TextView
                        android:id="@+id/tvClearing"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center|left"
                        android:textSize="10sp"
                        android:textColor="@color/colorText4"
                        android:singleLine="true"
                        app:tv_face_style="normal"
                        android:layout_marginTop="135dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="50dp"/>

                    <ir.accountbooklet.android.Customs.TextView
                        android:id="@+id/tvClearingCount"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:minWidth="25dp"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:singleLine="true"
                        android:textColor="@color/colorWhite"
                        app:t_background_color="@color/colorDefault2"
                        app:t_style="rect"
                        app:t_radii="15dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="145dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp"/>

                </ir.accountbooklet.android.Customs.CardView.YcCardView>

            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ir.accountbooklet.android.Customs.TextView
                android:id="@+id/tvFilters"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="10sp"
                android:textColor="@color/colorText2"
                android:text="@string/filters"
                app:tv_face_style="bold"
                app:t_background_color="@color/colorPrimary"
                app:t_selector_color="@color/colorDefaultSelector"
                app:t_style="rect"
                app:t_radii="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>

            <ir.accountbooklet.android.Customs.TextView
                android:id="@+id/tvSort"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="10sp"
                android:textColor="@color/colorText2"
                android:text="@string/sort"
                app:tv_face_style="bold"
                app:t_background_color="@color/colorPrimary"
                app:t_selector_color="@color/colorDefaultSelector"
                app:t_style="rect"
                app:t_radii="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"/>

        </LinearLayout>

        <ir.accountbooklet.android.Customs.RecyclerListView
            android:id="@+id/recyclerListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="65dp"/>

        <ir.accountbooklet.android.Customs.TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/colorText3"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"/>

        <ir.accountbooklet.android.Customs.ShadowView
            android:id="@+id/shdToolbar"
            android:alpha="1.0"
            style="@style/TopShadow"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_marginTop="65dp"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <ir.accountbooklet.android.Customs.TextView
        android:id="@+id/tvAdd"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="12sp"
        android:textColor="@color/colorWhite"
        android:text="@string/add"
        style="@style/Button"
        app:tv_face_style="bold"
        app:t_background_color="@color/colorDefault3"
        app:t_selector_color="@color/colorWhiteSelector"
        app:t_style="rect"
        app:t_radii="25dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/bannerLayout"/>

    <com.adivery.sdk.AdiveryBannerAdView
        android:id="@+id/bannerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>