<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/baseLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:splitMotionEvents="false"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ir.accountbooklet.android.Customs.SelectorImageView
        android:id="@+id/ivClose"
        style="@style/ToolbarButton"
        android:src="@drawable/ic_close"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

    <ir.accountbooklet.android.Customs.TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:textColor="@color/colorText2"
        android:textSize="12sp"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:text="@string/add_amount"
        app:tv_face_style="bold"
        android:layout_marginRight="@dimen/toolbar_height"
        android:layout_marginLeft="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#10000000"
        android:layout_marginTop="@dimen/toolbar_height"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ir.accountbooklet.android.Customs.TextView
                android:id="@+id/tvAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/colorText2"
                android:text="@string/amount_tmn"
                android:visibility="invisible"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"/>

            <ir.accountbooklet.android.Customs.EditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="12sp"
                android:maxLength="15"
                android:inputType="number"
                android:hint="@string/amount_tmn"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText3"
                app:et_text_many="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"/>

            <ir.accountbooklet.android.Customs.TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/colorText2"
                android:text="@string/description"
                android:visibility="invisible"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"/>

            <ir.accountbooklet.android.Customs.EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minWidth="40dp"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText3"
                android:maxLength="1000"
                android:hint="@string/description"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"/>

            <ir.accountbooklet.android.Customs.TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/colorText2"
                android:text="@string/date_amount"
                android:visibility="invisible"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"/>

            <ir.accountbooklet.android.Customs.EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="@color/colorText"
                android:textColorHint="@color/colorText3"
                android:maxLength="50"
                android:hint="@string/date_amount"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"/>

            <ir.accountbooklet.android.Customs.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorText3"
                android:text="@string/message_help_amount_date"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"/>

            <ir.accountbooklet.android.Customs.TextView
                android:id="@+id/tvPaid"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/colorText2"
                android:text="@string/message_help_paid"
                android:drawableRight="@drawable/ic_check_box_off"
                android:drawablePadding="10dp"
                app:tv_face_style="normal"
                app:tv_drawable_size="22dp"
                app:t_selector_color="@color/colorDefaultSelector"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="-5dp"/>

            <ir.accountbooklet.android.Customs.TextView
                android:id="@+id/tvAddAmount"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="10sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/add_amount"
                android:layout_gravity="center_horizontal"
                style="@style/Button"
                app:tv_face_style="bold"
                app:t_background_color="@color/colorDefault3"
                app:t_selector_color="@color/colorWhiteSelector"
                app:t_style="rect"
                app:t_radii="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="25dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>